<record model="ir.ui.view" id="view_ocs_crea_point_form">
        <field name="name">ocs.crea_point.form</field>
        <field name="model">ocs.crea_point</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="CREA Point">
            	<field name="name" select="1"/>              
                <field name="creation_date" select="0"/>                
                <field name="close_date" select="0"/>
                <field name="schedule" select="0"/>
                <field name="tract_id"/>                     
            </form>
        </field>
</record>
    
<record model="ir.ui.view" id="view_ocs_crea_point_tree">
        <field name="name">ocs.crea_point.tree</field>
        <field name="model">ocs.crea_point</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Crea Point">
                <field name="creation_date"/>
                <field name="name"/>
            </tree>
        </field>
</record>



<record model="ir.actions.act_window" id="action_ocs_crea_point">
        <field name="name">Tracts</field>
        <field name="res_model">ocs.crea_point</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
</record>


<menuitem name="Crea Point" id="menu_ocs_crea_point" action="action_ocs_crea_point" parent ="menu_construction_ocs_settings" sequence="3"/>




