                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="detalles">
                            <field name="codigo_fuente"/>
                            <field name="codigo_fuente_sdh"/>
                            <field name="nombre_fuente_sdh"/>
                            <field name="codigo_detalle_fuente_sdh"/>
                            <field name="nombre_detalle_fuente_sdh"/>
