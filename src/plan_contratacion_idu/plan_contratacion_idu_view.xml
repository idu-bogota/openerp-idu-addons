<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <menuitem name="Plan de Contratacion" id="menu_plan_contratacion" parent="base.menu_main_contrato_idu"/>
        <!-- Plan de contratacion -->
        <record id="plan_contratacion_idu_list" model="ir.ui.view">
            <field name="name">plan_contratacion_idu.plan.list</field>
            <field name="model">plan_contratacion_idu.plan</field>
            <field name="arch" type="xml">
                <tree string="Plan de contratación">
                    <field name="vigencia"/>
                    <field name="state" groups="plan_contratacion_idu.group_plan_contratacion_idu_manager, base.group_erp_manager"/>
                    <field name="open_close_plan" on_change="_onchange_open_close_plan(open_close_plan)" invisible="0"/>
                    <field name="item_ids"/>
                    <field name="total_pagos_presupuestado_plan"/>
                    <field name="total_pagos_programados_plan"/>
                    <field name="total_rezago_plan"/>
                </tree>
            </field>
        </record>
        <record id="plan_contratacion_idu_form" model="ir.ui.view">
            <field name="name">plan_contratacion_idu.plan.form</field>
            <field name="model">plan_contratacion_idu.plan</field>
            <field name="arch" type="xml">
                <form string="Plan de contratación" version="7.0">
                        <div class="oe_title">
                            <label for="vigencia" class="oe_edit_only"/>
                            <h1>
                                <field name="vigencia"/>
                            </h1>
                        </div>
                        <group name="estado">
                            <field name="open_close_plan" invisible="0"/>
                            <field name="version"/>
                            <field name="state" groups="plan_contratacion_idu.group_plan_contratacion_idu_manager"/>
                            <field name="active" groups="base.group_erp_manager"/>
                        </group>
                        <group col="2" colspan="1">
                            <button name="wkf_open" string="Abrir" type="object" icon="gtk-yes" groups="plan_contratacion_idu.group_plan_contratacion_idu_manager" attrs="{'invisible': [('open_close_plan','=',True)]}"/>
                            <button name="wkf_close" string="Cerrar" type="object" icon="gtk-no" groups="plan_contratacion_idu.group_plan_contratacion_idu_manager" attrs="{'invisible': [('open_close_plan','=',False)]}"/>
                            <button name="%(plan_contratacion_idu.action_plan_contratacion_idu_wizard_solicitud_cambio)d" string="Solicitar adición de un nuevo item"
                               type="action" icon="gtk-ok" context="{'plan_id': id, }"
                               attrs="{'invisible': [('open_close_plan','=',False)]}"
                            />
                        </group>
                        <field name="item_ids" context="{'plan_id': active_id}" />
                         <field name="currency_id" invisible="1"/>
                        <group>
                            <group class="oe_subtotal_footer oe_right" name="total_pagos_programado_item">
                                <field name="total_pagos_presupuestado_plan" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                <label for="total_pagos_programados_plan"/>
                                    <div>
                                        <field name="total_pagos_programados_plan" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1" string="Rezago"/>
                                    </div>
                                <field name="total_rezago_plan" widget='monetary' options="{'currency_field': 'currency_id'}" class="oe_subtotal_footer_separator"/>
                            </group>
                        </group>
                </form>
            </field>
        </record>
        <record id="plan_contratacion_idu_action" model="ir.actions.act_window">
            <field name="name">Plan Contratación</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">plan_contratacion_idu.plan</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="plan_contratacion_idu_list"/>
        </record>
        <menuitem
            action="plan_contratacion_idu_action"
            id="menu_plan_contratacion_plan_list"
            parent="menu_plan_contratacion"
            sequence="0"/>

        <!-- Item Plan de contratacion -->
            <record id="plan_contratacion_idu_item_search" model="ir.ui.view">
            <field name="name">plan_contratacion_idu.item.search</field>
            <field name="model">plan_contratacion_idu.item</field>
            <field name="arch" type="xml">
               <search string="Plan Contratación Items">
                    <filter icon="terp-check" string="Vigencia Actual" name="vigencia_actual" domain="['|',('plan_id.state', '=','inicial'),('plan_id.state', '=','en_ejecucion')]" help="Vigencia del Plan"/>
                    <separator/>
                    <field name="dependencia_id" string="Dependencia"/>
                    <field name="localizacion" string="Localización"/>
                    <field name="localidad_ids" string="Localidad"/>
                    <field name="plan_id" string="Vigencia"/>
                    <separator/>
                    <filter name="items_activos" string="Item activos" domain="['!',('state','in',('solicitud_cambio','no_realizado','ejecutado'))]" help="Items activos" icon="terp-check"/>
                    <filter name="solicitud_cambio" string="Solicitudes de cambio" domain="[('state','=','solicitud_cambio')]" help="Items activos" icon="terp-check"/>
                    <filter name="version_inicial" string="Versión Inicial" domain="[('state','=','version_inicial')]" help="Estado del item en Versión Inicial" icon="terp-check"/>
                    <filter name="aprobado" string="Aprobado" domain="[('state','=','aprobado')]" help="Estado del item en Aprobado" icon="terp-check"/>
                    <filter name="radicado" string="Radicado" domain="[('state','=','radicado')]" help="Estado del item Radicado" icon="terp-check"/>
                    <filter name="suscrito" string="Contrato Suscrito" domain="[('state','=','suscrito')]" help="Estado del item Contrato Suscrito" icon="terp-check"/>
                    <filter name="ejecucion" string="Ejecución" domain="[('state','=','ejecucion')]" help="Estado del item en Ejecución" icon="terp-check"/>
                    <filter name="ejecutado" string="Ejecutado" domain="[('state','=','ejecutado')]" help="Estado del item en Ejecutado" icon="terp-check"/>
                    <filter name="no_realizado" string="No realizado" domain="[('state','=','no_realizado')]" help="Estado del item No Realizado" icon="terp-check"/>
                    <separator/>
                    <filter icon="terp-mail-message-new" string="Mensajes no leidos" name="message_unread" domain="[('message_unread','=',True)]"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Dependencia" name="group_dependencia_id" icon="terp-folder-violet" domain="[]" context="{'group_by':'dependencia_id'}"/>
                        <filter string="Localización" name="group_localizacion" icon="terp-folder-violet" domain="[]" context="{'group_by':'localizacion'}"/>
                        <filter string="Clasificación Proyecto" icon="terp-gnome-cpu-frequency-applet+" domain="[]" context="{'group_by':'clasificacion_id'}"/>
                        <filter string="Proyecto IDU" icon="terp-go-month" domain="[]" context="{'group_by':'nombre_proyecto_idu''}" groups="base.group_no_one"/>
                        <filter string="Fuente de Financiación" icon="terp-go-month" domain="[]" context="{'group_by':'fuente_id''}" groups="base.group_no_one"/>
                        <filter string="Tipo Proceso" icon="terp-go-month" domain="[]" context="{'group_by':'tipo_proceso_id'}" groups="base.group_no_one"/>
                        <filter string="Tipo Proceso de Selección" icon="terp-go-month" domain="[]" context="{'group_by':'tipo_proceso_seleccion_id'}" groups="base.group_no_one"/>
                   </group>
                </search>
            </field>
        </record>

        <record id="plan_contratacion_idu_item_list" model="ir.ui.view">
            <field name="name">plan_contratacion_idu.item.list</field>
            <field name="model">plan_contratacion_idu.item</field>
            <field name="arch" type="xml">
                <tree string="Item Plan de contratación">
                    <field name="is_editable" invisible="1"/>
                    <field name="clasificacion_id"/>
                    <field name="state"/>
                    <field name="dependencia_id"/>
                    <field name="fuente_id"/>
                    <field name="plazo_de_ejecucion"/>
                    <field name="fecha_programada_radicacion"/>
                    <field name="fecha_programada_crp"/>
                    <field name="fecha_programada_acta_inicio"/>
                    <field name="presupuesto" sum="Presupuesto" on_change="onchange_presupuesto(presupuesto)"/>
                </tree>
            </field>
        </record>
        <record id="plan_contratacion_idu_item_form" model="ir.ui.view">
            <field name="name">plan_contratacion_idu.item.form</field>
            <field name="model">plan_contratacion_idu.item</field>
            <field name="arch" type="xml">
                <form string="Item plan de contratación" version="7.0">
                    <header>
                       <field name="state" widget="statusbar" colors="blue:state" clickable= 'False'/>
                    </header>
                    <group col="1" colspan="1">
                        <header>
                           <button name="wkf_version_inicial" string="Versión Inicial" type="object" icon="gtk-dnd" groups="base.group_erp_manager"/>
                           <button name="wkf_aprobado" string="Aprobado" type="object" icon="gtk-apply" states="version_inicial" groups="plan_contratacion_idu.group_plan_contratacion_idu_manager, base.group_erp_manager"/>
                           <button name="wkf_radicado" string="Radicar" type="object" icon="gtk-index" groups="base.group_erp_manager"/>
                           <button name="wkf_suscrito" string="Contrato Suscrito" type="object" icon="gtk-edit" groups="base.group_erp_manager"/>
                           <button name="wkf_ejecucion" string="Iniciar ejecución" type="object" icon="gtk-yes" groups="base.group_erp_manager"/>
                           <button name="wkf_ejecutado" string="Finalizar Ejecución" type="object" icon="kanban-stop" groups="base.group_erp_manager"/>
                           <button name="wkf_no_realizado" string="No Realizado" icon="gtk-cancel" type="object" groups="plan_contratacion_idu.group_plan_contratacion_idu_manager, base.group_erp_manager"/>
                           <button name="%(plan_contratacion_idu.action_plan_contratacion_idu_wizard_solicitud_cambio)d" string="Solicitar Cambio"
                              type="action" icon="gtk-ok" context="{'plan_item_id': id, 'plan_id': plan_id, }"
                              states="aprobado, radicado, suscrito"
                           />
                        </header>
                    </group>
                    <sheet>
                        <group>
                            <field name="is_editable" invisible="1" />
                            <field name="item_a_cambiar" attrs="{'invisible': [('state','!=','solicitud_cambio')]}"/>
                            <field name="plan_id" readonly="1" />
                            <field name="codigo_unspsc" attrs="{'readonly': [('is_editable','=',False)]}"/>
                            <field name="clasificacion_id" attrs="{'readonly': [('is_editable','=',False)]}"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group col="4" colspan="1">
                            
                            <field name="dependencia_id" attrs="{'readonly': [('is_editable','=',False)]}"/>
                            <field name="fuente_id" attrs="{'readonly': [('is_editable','=',False)]}"/>
                            <field name="tipo_proceso_id" attrs="{'readonly': [('is_editable','=',False)]}"/>
                            <field name="tipo_proceso_seleccion_id" attrs="{'readonly': [('is_editable','=',False)]}"/>
                            <field name="presupuesto" widget="monetary" options="{'currency_field': 'currency_id'}" attrs="{'readonly': [('is_editable','=',False)]}"/>
                            <field name="progress_rate" widget="progressbar"/>
                        </group>
                        <notebook colspan="6">
                            <page string="Detalles">
                                <group name="detalles">
                                    <field name="localizacion" attrs="{'readonly': [('is_editable','=',False)]}"/>
                                    <field name="localidad_ids" attrs="{'invisible':[('localizacion','!=','localidad')], 'required':[('localizacion', '=','localidad')]}"/>
                                    <field name="description" attrs="{'readonly': [('is_editable','=',False)]}"/>
                                    <field name="plazo_de_ejecucion"
                                        attrs="{
                                            'readonly':['|', ('a_monto_agotable','=',True),'|',('state','=','radicado'), ('is_editable','=',False)],
                                            'required':[('a_monto_agotable','=',False)]
                                        }"
                                    />
                                    <field name="a_monto_agotable" on_change="onchange_a_monto_agotable(a_monto_agotable)" attrs="{'readonly': [('is_editable','=',False)]}"/>
                                    <field name="no_aplica_unidad_mf" on_change="onchange_no_aplica_unidad_mf(no_aplica_unidad_mf)" attrs="{'readonly': [('is_editable','=',False)]}"/>
                                    <field name="unidad_meta_fisica_id"
                                        attrs="{
                                            'readonly':['|',('no_aplica_unidad_mf','=',True),'|',('state','=','radicado'),('is_editable','=',False)],
                                            'required':[('no_aplica_unidad_mf','=',False)],
                                            'invisible':[('no_aplica_unidad_mf','=',True)],
                                        }"
                                    />
                                    <field name="cantidad_meta_fisica"
                                        attrs="{
                                            'readonly':['|',('no_aplica_unidad_mf','=',True),'|',('state','=','radicado'), ('is_editable','=',False)],
                                            'required':[('no_aplica_unidad_mf','=',False)],
                                            'invisible':[('no_aplica_unidad_mf','=',True)],
                                        }"
                                    />
                                </group>
                            </page>
                            <page string="Información Centro de Costo">
                                <header class="oe_edit_only">
                                    <group col="2" colspan="2">
                                        <field name="centro_costo" on_change="on_change_centro_costo(centro_costo)" attrs="{'readonly': [('is_editable','=',False)]}"/>
                                    </group>
                                </header>
                                <group col="4" colspan="4">
                                    <field name="centro_costo_id"/>
                                    <field name="centro_costo_nombre" />
                                    <field name="cod_proyecto_idu"/>
                                    <field name="nombre_proyecto_idu"/>
                                    <field name="cod_punto_inversion"/>
                                    <field name="nombre_punto_inversion"/>
                                    <field name="cod_fase_intervencion"/>
                                    <field name="nombre_fase_intervencion"/>
                                </group>
                            </page>
                            <page string="Fechas">
                                <group name="fechas" string="Fechas Planificadas">
                                    <separator colspan="2"/>
                                    <field name="fecha_programada_radicacion" attrs="{'readonly': [('is_editable','=',False)]}"/>
                                    <field name="fecha_programada_crp" attrs="{'readonly': [('is_editable','=',False)]}"/>
                                    <field name="fecha_programada_acta_inicio" attrs="{'readonly': [('is_editable','=',False)]}"/>
                                 </group>
                                 <group name="informacion_verificacion" string="Fechas de Ejecución" col="4" colspan="1">
                                    <field name="numero_orfeo" on_change="onchange_numero_orfeo(numero_orfeo)"/>
                                    <field name="fecha_radicado_orfeo"/>
                                    <field name="numero_contrato" on_change="onchange_numero_contrato(numero_contrato)"/>
                                    <field name="numero_crp"/>
                                    <field name="nit_beneficiario"/>
                                    <field name="fecha_acta_inicio"/>
                                    <field name="fecha_acta_liquidacion"/>
                                </group>
                            </page>
                            <page string="Pagos">
                                <group name="pagos_programados" string="Pagos Programados">
                                    <field name="plan_pagos_item_ids" on_change="onchange_plan_pagos_item_ids(plan_pagos_item_ids)" nolabel="1" attrs="{'readonly': [('is_editable','=',False)]}">
                                        <tree string="Plan de pagos" editable="bottom">
                                            <field name="mes"/>
                                            <field name="valor" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        </tree>
                                    </field>
                                </group>
                                <group>
                                     <group class="oe_subtotal_footer oe_right" name="total_pagos_programado_item">>
                                         <field name="total_pagos_programados" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                         <label for="presupuesto_rezago"/>
                                            <div>
                                                <field name="presupuesto_rezago" string="Rezago" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                            </div>
                                            <field name="total_programado_rezago" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_subtotal_footer_separator"/>
                                     </group>
                               </group>
                               <group name="giros_realizados" string="Pagos Realizados">
                                    <field name="plan_pagos_giro_ids" nolabel="1">
                                        <tree string="Giros Realizados" editable="bottom">
                                            <field name="date"/>
                                            <field name="valor" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        </tree>
                                    </field>
                               </group>
                               <group>
                                     <group class="oe_subtotal_footer oe_right" name="total_pagos_realizados_item">>
                                         <field name="total_pagos_realizados" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                         <label for="presupuesto_rezago_realizado"/>
                                            <div>
                                                <field name="presupuesto_rezago_realizado" string="Rezago" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
                                            </div>
                                            <field name="total_realizado_rezago" widget="monetary" options="{'currency_field': 'currency_id'}" class="oe_subtotal_footer_separator"/>
                                     </group>
                               </group>
                            </page>
                            <page string="Solicitudes de cambio" attrs="{'invisible': [('state','=','solicitud_cambio')]}">
                                <group col="4" colspan="4" string="Items con los cambios propuestos">
                                    <field name="cambios_propuestos_ids" nolabel="1" readonly="1"/>
                                </group>
                                <group col="4" colspan="4" groups="base.group_erp_manager" string="Solicitudes de cambio">
                                    <field name="solicitud_cambio_ids" nolabel="1" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                       <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                       <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Cambios que aplican solo para el grupo de usuarios del plan-->
        <record id="plan_contratacion_idu_item_form_for_users" model="ir.ui.view">
            <field name="name">plan_contratacion_idu.item.form</field>
            <field name="model">plan_contratacion_idu.item</field>
            <field name="inherit_id" ref="plan_contratacion_idu_item_form"/>
            <field name="groups_id" eval="[(6, 0, [ref('plan_contratacion_idu.group_plan_contratacion_idu_user') ])]"/>
            <field name="arch" type="xml">
                <field name="dependencia_id" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
            </field>
        </record>

        <record id="plan_contratacion_idu_item_action" model="ir.actions.act_window">
            <field name="name">Item Plan Contratación</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">plan_contratacion_idu.item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_vigencia_actual':1, 'search_default_items_activos':1}</field>
            <field name="view_id" ref="plan_contratacion_idu_item_list"/>
        </record>
        <menuitem
            action="plan_contratacion_idu_item_action"
            id="menu_plan_contratacion_item_list"
            parent="menu_plan_contratacion"/>

        <!-- Clasificador de Proyectos -->
        <record id="plan_contratacion_idu_clasificador_proyectos_search" model="ir.ui.view">
            <field name="name">plan_contratacion_idu.clasificador_proyectos.search</field>
            <field name="model">plan_contratacion_idu.clasificador_proyectos</field>
            <field name="arch" type="xml">
               <search string="Clasificador Proyectos">
                    <field name="name"/>
                    <separator/>
                    <filter name="activo" string="Activo" domain="[('active','=',True)]" icon="terp-check"/>
                    <filter name="inactivo" string="Inactivo" domain="[('active','=',False)]" icon="terp-check"/>
                </search>
            </field>
        </record>
        <record id="plan_contratacion_idu_clasificador_proyectos_tree" model="ir.ui.view">
            <field name="name">plan_contratacion_idu.clasificador_proyectos.tree</field>
            <field name="model">plan_contratacion_idu.clasificador_proyectos</field>
            <field name="field_parent">child_ids</field>
            <field name="search_view_id" ref="plan_contratacion_idu_clasificador_proyectos_search"/>
            <field name="arch" type="xml">
                <tree string="Clasificación de Proyectos">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="plan_contratacion_idu_clasificador_proyectos_list" model="ir.ui.view">
            <field name="name">plan_contratacion_idu.clasificador_proyectos.list</field>
            <field name="model">plan_contratacion_idu.clasificador_proyectos</field>
            <field name="search_view_id" ref="plan_contratacion_idu_clasificador_proyectos_search"/>
            <field name="arch" type="xml">
                <tree string="Clasificación de Proyectos">
                    <field name="sequence" widget="handle"/>
                    <field name="complete_name"/>
                    <field name="codigo"/>
                    <field name="name"/>
                    <field name="tipo"/>
                </tree>
            </field>
        </record>
        <record id="plan_contratacion_idu_clasificador_proyectos_form" model="ir.ui.view">
            <field name="name">plan_contratacion_idu.clasificador_proyectos.form</field>
            <field name="model">plan_contratacion_idu.clasificador_proyectos</field>
            <field name="arch" type="xml">
            <form string="Clasificación de Proyectos" version="7.0">
                <sheet string="Clasificación">
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="tipo"/>
                        </h1>
                    </div>
                    <group name="detalles">
                        <field name="codigo"/>
                        <field name="name"/>
                        <field name="parent_id" />
                        <field name="child_ids" />
                    </group>
                </sheet>
            </form>
            </field>
        </record>
        <record id="plan_contratacion_idu_clasificador_proyectos_tree_action" model="ir.actions.act_window">
            <field name="name">plan_contratacion_idu.clasificador_proyectos.tree</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">plan_contratacion_idu.clasificador_proyectos</field>
            <field name="domain">[('parent_id','=',False)]</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="plan_contratacion_idu_clasificador_proyectos_tree"/>
        </record>
        <menuitem
            action="plan_contratacion_idu_clasificador_proyectos_tree_action"
            id="plan_contratacion_idu_clasificador_proyectos_tree_menu"
            parent="menu_plan_contratacion"
            name="Clasificación de Proyectos"
            sequence="0" />
        <record id="plan_contratacion_idu_clasificador_proyectos_action" model="ir.actions.act_window">
            <field name="name">Deliverables</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">plan_contratacion_idu.clasificador_proyectos</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,gantt,calendar,kanban</field>
            <field name="domain">['|',('id','=',active_id),('id','child_of',active_id)]</field>
