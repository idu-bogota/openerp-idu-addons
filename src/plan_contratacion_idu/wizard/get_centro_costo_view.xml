<?xml version="1.0"?>   
<openerp>
<data>
        <!-- View Form Wizard -->
        <record id="view_idu_wizard_get_centro_costo" model="ir.ui.view">
            <field name="name">Obtener Centros de Costo</field>
            <field name="model">plan_contratacion_idu.wizard.get_centro_costo</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Obtener Centro de Costo"  version="7.0">
                    <group col="4">
                        <field name="centro_costo" colspan="4"/>
                            <group col = "4" colspan = "4">
                                <field name="proyecto_idu_id"/>
                                <field name="proyecto_idu"/>
                                <field name="punto_inversion_id"/>
                                <field name="punto_inversion"/>
                            </group>
                    </group>
                    <footer>
                        <button name="action_create" string="Asignar" type="object" class="oe_highlight" />
                            or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>


        <!-- Action  -->
        <record id="action_plan_contratacion_idu_wizard_get_centro_costo" model="ir.actions.act_window">
            <field name="name">Obtener Centro de Costo</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">plan_contratacion_idu.wizard.get_centro_costo</field>
            <field name="src_model">plan_contratacion_idu.wizard.get_centro_costo</field>
            <field name="view_id" ref="view_idu_wizard_get_centro_costo"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
</data>
</openerp>