<?xml version="1.0"?>   
<openerp>
<data>

        <record id="view_plan_contratacion_idu_wizard_reporte_form_download" model="ir.ui.view">
            <field name="name">Descargar Plan Contratacion a Excel</field>
            <field name="model">plan_contratacion_idu.wizard.reporte</field>
            <field name="arch" type="xml">
                <form string="Descargar a Excel Centro de Costo">
                        <group col="2" colspan="4">
                            <field name="data" readonly="1" width="100" filename="filename"/>
                        </group>
                        <button special="cancel" string="Close" icon="gtk-cancel"/>
                </form>
            </field>
        </record>




        <record id="view_plan_contratacion_idu_wizard_reporte_form" model="ir.ui.view">
            <field name="name">Exportar Plan Contratacion a Excel</field>
            <field name="model">plan_contratacion_idu.wizard.reporte</field>
            <field name="arch" type="xml">
                <form string="Exportar a Excel Centro de Costo">
                        <field name="plan_contratacion" on_change="onchange_plan_contratacion(plan_contratacion)"/>
                        <group col="4" colspan="1">
                            <button name="generar" string="Export" type="object" icon="gtk-ok"/>
                            <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                        </group>
                </form>
            </field>
        </record>

        <record id="action_plan_contratacion_idu_wizard_reporte" model="ir.actions.act_window">
            <field name="name">Exportar Plan Contratacion a Excel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">plan_contratacion_idu.wizard.reporte</field>
            <field name="src_model">plan_contratacion_idu.wizard.reporte</field>
            <field name="view_id" ref="view_plan_contratacion_idu_wizard_reporte_form"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Exportar a Excel" id="reporte_exportar_a_excel" parent="plan_contratacion_idu.menu_plan_contratacion" action="action_plan_contratacion_idu_wizard_reporte"/>
</data>
</openerp>