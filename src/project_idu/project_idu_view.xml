                <field name="type" position="after">
                    <field name="opportunity_evaluation" invisible="1"/>
                    <field name="etapa_nombre" invisible="1"/>
                </field>
                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">orange:opportunity_evaluation=='is_late';green:opportunity_evaluation=='is_on_time';red:opportunity_evaluation=='is_not_finished'</attribute>
