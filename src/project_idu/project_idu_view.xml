                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Proyecto" name="group_project_id" icon="terp-folder-violet" domain="[]" context="{'group_by':'project_id'}"/>
                        <filter string="Clasificación" name="group_clasificacion_id" icon="terp-folder-violet" domain="[]" context="{'group_by':'clasificacion_id'}"/>
