        <!-- Modificando actions existentes en otros módulos -->
        <record id="project_long_term.act_project_phases" model="ir.actions.act_window">
            <field name="res_model">project.phase</field>
            <field name="view_type">form</field>
            <field name="name">Phases</field>
            <field name="view_mode">tree,form,gantt</field>
            <field name="context">{'search_default_project_id': [active_id], 'default_project_id': active_id}</field>
        </record>
        <record id="project.open_view_project_all" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="domain">[]</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="project.view_project_kanban"/>
            <field name="search_view_id" ref="project.view_project_project_filter"/>
            <field name="context">{'search_default_Current': 1, 'search_default_group_by_etapa':1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                  Click to start a new project.
                </p><p>
                  Projects are used to organize your activities; plan
                  tasks, track issues, invoice timesheets. You can define
                  internal projects (R&amp;D, Improve Sales Process),
                  private projects (My Todos) or customer ones.
                </p><p>
                  You will be able collaborate with internal users on
                  projects or invite customers to share your activities.
                </p>
            </field>
        </record>

        <!-- Project Views -->

        <record id="view_project" model="ir.ui.view">
            <field name="name">project.project.tree</field>
            <field name="model">project.project</field>
            <field name="field_parent">child_ids</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
                <tree fonts="bold:message_unread==True" colors="red:date and (date&lt;current_date) and (state == 'open');blue:state in ('draft','pending');grey: state in ('close','cancelled')" string="Projects">
                    <field name="wbs_progress" widget="progressbar"/>
                </tree>
            </field>
        </record>

        <record id="project_form" model="ir.ui.view">
            <field name="name">project_idu.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="clasificacion_id"/>
                </field>
                <field name="privacy_visibility" position="replace" />
                <xpath expr="//group/group[2]" position="replace" /><!-- Elimina el texto referencia al partner y a la cuenta analítica -->
            </field>
        </record>
        <record id="project_filter" model="ir.ui.view">
            <field name="name">project_idu.project.filter</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_project_filter"/>
            <field name="arch" type="xml">
                <filter name="Parent" position="after">
                    <filter string="Etapa" name="group_by_etapa" icon="terp-personal" domain="[]" context="{'group_by':'etapa_nombre'}"/>
                </filter>
            </field>
        </record>
        <record id="project_pmi_deliverable_tree" model="ir.ui.view">
            <field name="name">project_pmi.wbs_item.tree</field>
            <field name="model">project_pmi.wbs_item</field>
            <field name="inherit_id" ref="project_pmi_wbs.project_pmi_deliverable_tree"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="opportunity_evaluation" invisible="1"/>
                    <field name="etapa_nombre" invisible="1"/>
                </field>
                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">orange:opportunity_evaluation=='is_late';green:opportunity_evaluation=='is_on_time';red:opportunity_evaluation=='is_not_finished'</attribute>
                </xpath>
            </field>
        </record>
        <record id="view_project_phase_list" model="ir.ui.view">
            <field name="name">project.phase.list</field>
            <field name="model">project.phase</field>
            <field name="inherit_id" ref="project_long_term.view_project_phase_list"/>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="etapa_nombre" invisible="1"/>
                </field>
            </field>
        </record>
        <record id="project_pmi_deliverable_list" model="ir.ui.view">
            <field name="name">project_pmi.wbs_item.list</field>
