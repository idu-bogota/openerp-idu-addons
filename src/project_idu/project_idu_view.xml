<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Project Views -->
        <record id="project_form" model="ir.ui.view">
            <field name="name">project_idu.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//group/group[2]" position="replace" /><!-- Elimina el texto referencia al partner y a la cuenta analÃ­tica -->
            </field>
        </record>
        <record id="project_filter" model="ir.ui.view">
            <field name="name">project_idu.project.filter</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_project_filter"/>
            <field name="arch" type="xml">
                <filter name="Parent" position="after">
                    <filter string="Etapa" name="Etapa" icon="terp-personal" domain="[]" context="{'group_by':'etapa_id'}"/>
                </filter>
            </field>
        </record>
        <record id="project_pmi_deliverable_tree" model="ir.ui.view">
            <field name="name">project_pmi.wbs_item.tree</field>
            <field name="model">project_pmi.wbs_item</field>
            <field name="inherit_id" ref="project_pmi_wbs.project_pmi_deliverable_tree"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="opportunity_evaluation" invisible="1"/>
                </field>
                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">orange:opportunity_evaluation=='is_late';green:opportunity_evaluation=='is_on_time';red:opportunity_evaluation=='is_not_finished'</attribute>
                </xpath>
            </field>
        </record>
        <record id="project_pmi_deliverable_list" model="ir.ui.view">
            <field name="name">project_pmi.wbs_item.list</field>
            <field name="model">project_pmi.wbs_item</field>
            <field name="inherit_id" ref="project_pmi_wbs.project_pmi_deliverable_list"/>
            <field name="arch" type="xml">
                <field name="type" position="after">
                    <field name="opportunity_evaluation" invisible="1"/>
                </field>
                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">orange:opportunity_evaluation=='is_late';green:opportunity_evaluation=='is_on_time';red:opportunity_evaluation=='is_not_finished'</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
