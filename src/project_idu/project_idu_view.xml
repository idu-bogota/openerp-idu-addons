        <record id="project_idu_proyecto_tipificacion_list_action" model="ir.actions.act_window">
            <field name="name">Deliverables</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_idu.proyecto_tipificacion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="project_idu_proyecto_tipificacion_list"/>
        </record>

    </data>
</openerp>
