                    <filter name="inactivo" string="Inactivo" domain="[('active','=',False)]" icon="terp-check"/>
                </search>
            </field>
        </record>

        <record id="project_idu_proyecto_tipificacion_tree" model="ir.ui.view">
            <field name="name">project_idu.proyecto_tipificacion.tree</field>
            <field name="model">project_idu.proyecto_tipificacion</field>
            <field name="field_parent">child_ids</field>
            <field name="search_view_id" ref="project_idu_proyecto_tipificacion_search"/>
            <field name="arch" type="xml">
                <tree string="Tipificación de actividades">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <record id="project_idu_proyecto_tipificacion_list" model="ir.ui.view">
            <field name="name">project_idu.proyecto_tipificacion.list</field>
            <field name="model">project_idu.proyecto_tipificacion</field>
            <field name="search_view_id" ref="project_idu_proyecto_tipificacion_search"/>
            <field name="arch" type="xml">
                <tree string="Tipificación de actividades">
                    <field name="sequence" widget="handle"/>
                    <field name="complete_name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="project_idu_proyecto_tipificacion_form" model="ir.ui.view">
            <field name="name">project_idu.proyecto_tipificacion.form</field>
            <field name="model">project_idu.proyecto_tipificacion</field>
            <field name="arch" type="xml">
                <form string="Tipificación de actividades" version="7.0">
                    <sheet string="Tipificación">
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="detalles">
                            <field name="active" />
                            <field name="parent_id" />
                            <field name="child_ids" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="project_idu_proyecto_tipificacion_tree_action" model="ir.actions.act_window">
            <field name="name">project_idu.proyecto_tipificacion.tree</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_idu.proyecto_tipificacion</field>
            <field name="domain">[('parent_id','=',False)]</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="project_idu_proyecto_tipificacion_tree"/>
        </record>
        <menuitem
        action="project_idu_proyecto_tipificacion_tree_action"
        id="project_idu_proyecto_tipificacion_tree_menu"
        parent="base.menu_definitions"
        name="Clasificación de proyectos"
        groups="project.group_project_manager"
            sequence="0" />

        <record id="project_idu_proyecto_tipificacion_action" model="ir.actions.act_window">
            <field name="name">Deliverables</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_idu.proyecto_tipificacion</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">['|',('id','=',active_id),('id','child_of',active_id)]</field>
            <field name="view_id" ref="project_idu_proyecto_tipificacion_list"/>
        </record>
        <record id="ir_deliverable_tree_open" model="ir.values">
            <field eval="'tree_but_open'" name="key2"/>
            <field eval="'project_idu.proyecto_tipificacion'" name="model"/>
            <field name="name">Tipificación de proyectos</field>
            <field eval="'ir.actions.act_window,%d'%project_idu_proyecto_tipificacion_action" name="value"/>
