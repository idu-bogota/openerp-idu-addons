<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- MENU DEFINITIONS -->

        <menuitem id="menu_project_portfolio" name="Portfolio" parent="base.menu_main_pm" sequence="1"/>

        <!-- Portfolio Views -->
        <record id="project_pmi_portfolio_tree" model="ir.ui.view">
            <field name="name">project_pmi.portfolio.tree</field>
            <field name="model">project_pmi.portfolio</field>
            <field name="field_parent">child_id</field>
            <field name="arch" type="xml">
                <tree string="Porfolio Tree">
                    <field name="name"/>
                    <field name="strategic_goal_id"/>
                    <field name="project_count"/>
                    <field name="state"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="project_pmi_portfolio_list" model="ir.ui.view">
            <field name="name">project_pmi.portfolio.list</field>
            <field name="model">project_pmi.portfolio</field>
            <field name="arch" type="xml">
                <tree string="Porfolio List">
                    <field name="sequence" widget="handle"/>
                    <field name="complete_name"/>
                    <field name="strategic_goal_id"/>
                    <field name="project_count"/>
                    <field name="state"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="project_pmi_portfolio_form" model="ir.ui.view">
            <field name="name">project_pmi.portfolio.form</field>
            <field name="model">project_pmi.portfolio</field>
            <field name="arch" type="xml">
                <form string="Project Portfolio" version="7.0">
                    <header>
                        <field name="state" widget="statusbar" statusbar_colors='{"pending":"blue"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="parent">
                            <field name="parent_id"/>
                        </group>
                        <group name="description">
                            <field name="strategic_goal_id"/>
                            <field name="description"/>
                        </group>
                        <group name="projects">
                           <separator string="Projects" colspan="4"/>
                           <field name="project_ids" nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" help="Follow this Strategy to automatically track the events associated" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="project_pmi_portfolio_tree_action" model="ir.actions.act_window">
            <field name="name">Portfolios</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi.portfolio</field>
            <field name="domain">[('parent_id','=',False)]</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="project_pmi_portfolio_tree"/>
        </record>
        <!-- Click on portfolio's tree item displays linked projects -->
        <record id="project_pmi_portfolio_project_list" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'portfolio_ids':active_id, 'search_default_portfolio_ids':active_id}</field>
        </record>
        <record id="project_pmi_portfolio_open" model="ir.values">
            <field eval="'tree_but_open'" name="key2"/>
            <field eval="'project_pmi.portfolio'" name="model"/>
            <field name="name">Portfolios</field>
            <field eval="'ir.actions.act_window,%d'%project_pmi_portfolio_project_list" name="value"/>
        </record>
        <menuitem
            action="project_pmi_portfolio_tree_action"
            id="project_pmi_portfolio_tree_menu"
            parent="project.menu_project_management"
            sequence="0" />

        <record id="project_pmi_portfolio_list_action" model="ir.actions.act_window">
            <field name="name">Portfolios</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi.portfolio</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="project_pmi_portfolio_list"/>
        </record>
        <menuitem
            action="project_pmi_portfolio_list_action"
            id="project_pmi_portfolio_list_menu"
            parent="base.menu_definitions"
            sequence="0" />

        <!-- Programs Views -->
        <record id="project_pmi_program_tree" model="ir.ui.view">
            <field name="name">project_pmi.program.tree</field>
            <field name="model">project_pmi.program</field>
            <field name="field_parent">child_id</field>
            <field name="arch" type="xml">
                <tree string="Programs">
                    <field name="name"/>
                    <field name="project_count"/>
                    <field name="state"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <!-- Click on program's tree item displays linked projects -->
        <record id="project_pmi_program_project_list" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.project</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'program_ids':active_id, 'search_default_program_ids':active_id}</field>
        </record>
        <record id="project_pmi_program_open" model="ir.values">
            <field eval="'tree_but_open'" name="key2"/>
            <field eval="'project_pmi.program'" name="model"/>
            <field name="name">Programs</field>
            <field eval="'ir.actions.act_window,%d'%project_pmi_program_project_list" name="value"/>
        </record>
        <record id="project_pmi_program_list" model="ir.ui.view">
            <field name="name">project_pmi.program.list</field>
            <field name="model">project_pmi.program</field>
            <field name="arch" type="xml">
                <tree string="Program">
                    <field name="sequence" widget="handle"/>
                    <field name="complete_name"/>
                    <field name="project_count"/>
                    <field name="state"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="project_pmi_program_form" model="ir.ui.view">
            <field name="name">project_pmi.program.form</field>
            <field name="model">project_pmi.program</field>
            <field name="arch" type="xml">
                <form string="Project Program" version="7.0">
                    <header>
                        <field name="state" widget="statusbar" statusbar_colors='{"pending":"blue"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="parent">
                            <field name="parent_id"/>
                        </group>
                        <group name="description">
                            <field name="description"/>
                        </group>
                        <group name="projects">
                           <separator string="Projects" colspan="4"/>
                           <field name="project_ids" nolabel="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" help="Follow this Strategy to automatically track the events associated" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="project_pmi_program_tree_action" model="ir.actions.act_window">
            <field name="name">Programs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi.program</field>
            <field name="domain">[('parent_id','=',False)]</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="project_pmi_program_tree"/>
        </record>
        <menuitem
            action="project_pmi_program_tree_action"
            id="project_pmi_program_tree_menu"
            parent="project.menu_project_management"
            sequence="0" />

        <record id="project_pmi_program_list_action" model="ir.actions.act_window">
            <field name="name">Programs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi.program</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="project_pmi_program_list"/>
        </record>
        <menuitem
            action="project_pmi_program_list_action"
            id="project_pmi_program_list_menu"
            parent="base.menu_definitions"
            sequence="0" />

        <!-- Project Views -->
        <record id="project_form" model="ir.ui.view">
            <field name="name">project_pmi_portfolio.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <field name="user_id" position="before">
                    <field name="strategic_objective_id"/>
                </field>
	            <page string="Team" position="after">
                    <page string="Portfolio">
                        <field name="portfolio_ids" nolabel="1" />
                    </page>
                    <page string="Program">
                        <field name="program_ids" nolabel="1" />
                    </page>
                </page>
            </field>
        </record>
        <record id="project_filter" model="ir.ui.view">
            <field name="name">project_pmi_portfolio.project.filter</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_project_filter"/>
            <field name="arch" type="xml">
                <field name="user_id" position="after">
                    <field name="portfolio_ids" string="Portfolio" />
                    <field name="program_ids" string="Program" />
                </field>
            </field>
        </record>
        <record id="project_pmi_project_list" model="ir.ui.view">
            <field name="name">project.project.tree</field>
            <field name="model">project.project</field>
            <field name="field_parent">child_ids</field>
            <field name="inherit_id" ref="project.view_project"/>
            <field name="arch" type="xml">
               <field name="name" position="after">
                   <field name="parent_id" string="Parent"/>
                   <field name="date"/>
                   <field name="portfolio_ids" invisible="1"/>
                   <field name="program_ids" invisible="1"/>
               </field>
            </field>
        </record>
        <!-- Strategic Planning views -->
        <record id="enterprise_strategic_planning_goal_form" model="ir.ui.view">
            <field name="name">enterprise_strategic_planning.goal.form</field>
            <field name="model">enterprise_strategic_planning.goal</field>
            <field name="inherit_id" ref="enterprise_strategic_planning.enterprise_strategic_planning_goal_form"/>
            <field name="arch" type="xml">
                 <group name="Objectives" position="after">
                     <group name="Portfolios">
	                    <separator string="Related Portfolios" colspan="4"/>
	                    <field name="portfolio_ids" nolabel="1"/>
	                 </group>
                 </group>
            </field>
        </record>

        <record id="enterprise_strategic_planning_objective_form" model="ir.ui.view">
            <field name="name">enterprise_strategic_planning.objective.form</field>
            <field name="model">enterprise_strategic_planning.objective</field>
            <field name="inherit_id" ref="enterprise_strategic_planning.enterprise_strategic_planning_objective_form"/>
            <field name="arch" type="xml">
                <group name="details" position="after">
                     <group name="Projects">
                        <separator string="Related Projects" colspan="4"/>
                        <field name="project_ids" nolabel="1"/>
                     </group>
                </group>
            </field>
        </record>
    </data>
</openerp>
