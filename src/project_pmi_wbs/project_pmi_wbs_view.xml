<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- MENU DEFINITIONS -->

        <menuitem id="menu_project_wbs" name="WBS" parent="base.menu_main_pm" sequence="1"/>

        <!-- WBS Views -->
        <record id="project_pmi_wbs_list" model="ir.ui.view">
            <field name="name">project_pmi.wbs.list</field>
            <field name="model">project_pmi.wbs</field>
            <field name="arch" type="xml">
                <tree string="Work Breakdown Structure List">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="state"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="project_pmi_wbs_form" model="ir.ui.view">
            <field name="name">project_pmi.wbs.form</field>
            <field name="model">project_pmi.wbs</field>
            <field name="arch" type="xml">
                <form string="Work Breakdown Structure" version="7.0">
                    <header>
                        <field name="state" widget="statusbar" statusbar_colors='{"pending":"blue"}'/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="description">
                            <field name="code" readonly="1"/>
                            <field name="project_id"/>
                        </group>
                        <group name="Deliverables">
                           <separator string="WBS Deliverables Structure" colspan="4"/>
                           <field name="deliverable_ids" nolabel="1">
                                <tree>
                                    <field name="complete_name"/>
                                    <field name="weight"/>
                                    <field name="active"/>
                                    <field name="state"/>
                                </tree>
                           </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" help="Follow this WBS to automatically track the events associated" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="project_pmi_wbs_list_action" model="ir.actions.act_window">
            <field name="name">WBS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi.wbs</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="project_pmi_wbs_list"/>
        </record>
        <menuitem
            action="project_pmi_wbs_list_action"
            id="project_pmi_wbs_list_menu"
            parent="base.menu_definitions"
            sequence="0" />

        <!-- Deliverables Views -->
        <record id="project_pmi_deliverable_tree" model="ir.ui.view">
            <field name="name">project_pmi.deliverable.tree</field>
            <field name="model">project_pmi.deliverable</field>
            <field name="field_parent">child_ids</field>
            <field name="arch" type="xml">
                <tree string="WBS Tree" toolbar="1">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="weight"/>
                    <field name="state"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="project_pmi_deliverable_list" model="ir.ui.view">
            <field name="name">project_pmi.deliverable.list</field>
            <field name="model">project_pmi.deliverable</field>
            <field name="arch" type="xml">
                <tree string="WBS List">
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="complete_name"/>
                    <field name="weight"/>
                    <field name="state"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="project_pmi_deliverable_form" model="ir.ui.view">
            <field name="name">project_pmi.deliverable.form</field>
            <field name="model">project_pmi.deliverable</field>
            <field name="arch" type="xml">
           <form string="WBS item" version="7.0">
                <header>
                    <field name="state" widget="statusbar" clickable="True"/>
                </header>
                    <sheet string="Deliverable">
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="details">
                            <field name="code" readonly="1" />
                            <field name="type" />
                            <field name="parent_id" domain="[('wbs_id','=',parent.id)]"/>
                            <field name="weight"/>
                            <field name="description"/>
                        </group>
                        <group name="work_package" string="Work Package" attrs="{'invisible': [('type','!=','work_package')]}">
                            <field name="quantity"/>
                            <field name="uom_id"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="date_deadline"/>
                        </group>
                        <group string="Child Deliverables" attrs="{'invisible': [('type','!=','deliverable')]}">
                           <field name="child_ids" nolabel="1" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" help="Follow this deliverable to automatically track the events associated" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="project_pmi_deliverable_kanban">
            <field name="name">project_pmi.deliverable.kanban</field>
            <field name="model">project_pmi.deliverable</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" >
                    <field name="name"/>
                    <field name="description"/>
                    <field name="sequence"/>
                    <field name="state" groups="base.group_no_one"/>
                    <field name="color"/>
                    <field name="parent_id"/>
                    <field name="date_deadline"/>
                    <field name="message_summary"/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_dropdown_toggle oe_dropdown_kanban" groups="base.group_user">
                                <span class="oe_e">Ã­</span>
                                <ul class="oe_dropdown_menu">
                                    <t t-if="widget.view.is_action_enabled('edit')"><li><a type="edit">Edit...</a></li></t>
                                    <t t-if="widget.view.is_action_enabled('delete')"><li><a type="delete">Delete</a></li></t>
                                    <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                </ul>
                            </div>

                            <div class="oe_kanban_content">
                                <div><b><field name="name"/></b></div>
                                <div>
                                    <field name="parent_id"/><br/>
                                    <t t-if="record.date_deadline.raw_value and record.date_deadline.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t>
                                    <span t-attf-class="#{red || ''}"><i><field name="date_deadline"/></i></span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span>Hola</span>
                                </div>
                                <div class="oe_kanban_footer_left">
                                    <span>Hola1</span>
                                </div>
                                <div class="oe_kanban_footer_left" style="margin-top:5px;">
                                    <t t-raw="record.message_summary.raw_value"/>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
         </record>

        <record id="project_pmi_deliverable_gantt" model="ir.ui.view">
            <field name="name">project_pmi.deliverable.gantt</field>
            <field name="model">project_pmi.deliverable</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <gantt date_start="date_start" date_stop="date_deadline" string="Deliverables" default_group_by="parent_id">
                </gantt>
            </field>
        </record>

        <record id="project_pmi_deliverable_tree_action" model="ir.actions.act_window">
            <field name="name">project_pmi.deliverable.tree</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi.deliverable</field>
            <field name="domain">[('parent_id','=',False)]</field>
            <field name="view_type">tree</field>
            <field name="view_mode">kanban,gantt,tree</field>
            <field name="view_id" ref="project_pmi_deliverable_tree"/>
        </record>
        <menuitem
            action="project_pmi_deliverable_tree_action"
            id="project_pmi_deliverable_tree_menu"
            parent="project.menu_project_management"
            name="WBS Tree"
            sequence="0" />

        <record id="project_pmi_deliverable_list_action" model="ir.actions.act_window">
            <field name="name">Deliverables</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi.deliverable</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,gantt,tree,form</field>
            <field name="view_id" ref="project_pmi_deliverable_list"/>
        </record>

        <menuitem
            action="project_pmi_deliverable_list_action"
            id="project_pmi_deliverable_list_menu"
            name="WBS List"
            parent="project.menu_project_management"
            sequence="0" />

        <!-- Project Views -->
        <record id="project_form" model="ir.ui.view">
            <field name="name">project_pmi_wbs.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <page string="Team" position="after">
                    <page string="Work Breakdown Structure">
                        <field name="wbs_ids" nolabel="1" />
                    </page>
                </page>
            </field>
        </record>
    </data>
</openerp>
