<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- MENU DEFINITIONS -->

        <menuitem id="menu_project_wbs" name="WBS" parent="base.menu_main_pm" groups="project.group_project_manager,project.group_project_user"/>

        <!-- WBS Views -->
        <record id="project_pmi_deliverable_search" model="ir.ui.view">
            <field name="name">project_pmi.wbs_item.search</field>
            <field name="model">project_pmi.wbs_item</field>
            <field name="arch" type="xml">
               <search string="WBS Items">
                    <field name="name" string="WBS Name"/>
                    <separator/>
                    <filter name="deliverable" string="Deliverables" domain="[('type','=','deliverable')]" help="Deliverables" icon="terp-check"/>
                    <filter name="workpackage" string="Work Packages" domain="[('type','=','work_package')]" help="Work Packages" icon="terp-check"/>
                    <separator/>
                    <filter name="My project" string="Project" domain="[('project_id.user_id','=',uid)]" help="My Projects" icon="terp-check"/>
                    <field name="project_id"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Project" name="group_project_id" icon="terp-folder-violet" domain="[]" context="{'group_by':'project_id'}"/>
                        <filter string="Deadline" icon="terp-gnome-cpu-frequency-applet+" domain="[]" context="{'group_by':'date_deadline'}"/>
                        <filter string="Start Date" icon="terp-go-month" domain="[]" context="{'group_by':'date_start'}" groups="base.group_no_one"/>
                        <filter string="End Date" icon="terp-go-month" domain="[]" context="{'group_by':'date_end'}" groups="base.group_no_one"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="project_pmi_deliverable_tree" model="ir.ui.view">
            <field name="name">project_pmi.wbs_item.tree</field>
            <field name="model">project_pmi.wbs_item</field>
            <field name="field_parent">child_ids</field>
            <field name="search_view_id" ref="project_pmi_deliverable_search"/>
            <field name="arch" type="xml">
                <tree string="WBS Tree">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="type"/>
                    <field name="tracking_type"/>
                    <field name="date_deadline"/>
                    <field name="date_end"/>
                    <field name="state"/>
                    <field name="active"/>
                    <field name="weight"/>
                    <field name="progress_rate"/>
                </tree>
            </field>
        </record>
        <record id="project_pmi_deliverable_list" model="ir.ui.view">
            <field name="name">project_pmi.wbs_item.list</field>
            <field name="model">project_pmi.wbs_item</field>
            <field name="search_view_id" ref="project_pmi_deliverable_search"/>
            <field name="arch" type="xml">
                <tree string="WBS List">
                    <field name="sequence" widget="handle"/>
                    <field name="code"/>
                    <field name="listing_name"/>
                    <field name="type"/>
                    <field name="tracking_type"/>
                    <field name="date_deadline"/>
                    <field name="date_end"/>
                    <field name="progress_rate"/>
                    <field name="progress_rate" widget="progressbar"/>
                    <field name="state"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="project_pmi_deliverable_form" model="ir.ui.view">
            <field name="name">project_pmi.wbs_item.form</field>
            <field name="model">project_pmi.wbs_item</field>
            <field name="arch" type="xml">
           <form string="WBS item" version="7.0">
                <header>
                    <button name="set_draft" string="Draft" type="object" states="open" groups="base.group_user"/>
                    <button name="set_open" string="Open" type="object" states="draft,pending" groups="base.group_user"/>
                    <button name="set_open" string="Re-open" type="object" states="done" groups="base.group_user"/>
                    <button name="set_done" string="Done" type="object" states="open" groups="base.group_user"/>
                    <button name="set_pending" string="Pending" type="object" states="open" groups="base.group_user"/>
                    <button name="set_template" string="Set as a template" type="object" states="draft" groups="base.group_user"/>
                    <button name="set_bulk_project" string="Bulk project and phase assignation" type="object" states="draft" groups="base.group_user"/>
                    <button name="set_weight_on" string="Use weight in this and children" type="object" groups="base.group_user" 
                        attrs="{'invisible': ['|',('use_weight','=',True),('type','!=','deliverable')]}"
                    />
                    <button name="set_weight_off" string="Deactivate weight in this and children" type="object" groups="base.group_user" 
                        attrs="{'invisible': ['|',('use_weight','=',False),('type','!=','deliverable')]}"
                    />
                    <field name="state" widget="statusbar"/>
                </header>
                    <sheet string="Deliverable">
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group name="details">
                            <field name="code" readonly="1" />
                            <field name="project_id"/>
                            <field name="phase_id"/>
                            <field name="type" />
                            <field name="tracking_type" attrs="{'invisible': [('type','!=','work_package')],'required':[('type','=','work_package')]}"/>
                            <field name="description"/>
                            <field name="use_weight" invisible="1"/>
                            <field name="weight" attrs="{'invisible': [('use_weight','=',False)]}"/>
                            <field name="progress_rate" widget="progressbar"/>
                            <field name="parent_id" />
                        </group>
                        <group name="work_package_gantt" string="Dates">
                            <group>
                                <field name="date_deadline"/>
                            </group>
                            <group attrs="{'invisible': [('type','!=','work_package')]}">
                                <field name="date_start" />
                                <field name="date_end"/>
                            </group>
                        </group>
                        <group name="work_package_measure" string="Work" attrs="{'invisible': ['|',('tracking_type','!=','units'),('type','!=','work_package')]}">
                            <field name="quantity"/>
                            <field name="uom_id" attrs="{'required': [('tracking_type','=','units')]}"/>
                            <field name="work_record_ids" groups="project.group_tasks_work_on_tasks">
                                <tree string="Work Package Work" editable="top">
                                    <field name="name"/>
                                    <field name="quantity" widget="float" sum="Spent Hours"/>
                                    <field name="date" readonly="1"/>
                                    <field name="user_id"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Tasks" attrs="{'invisible': ['|',('tracking_type','!=','tasks'),('type','!=','work_package')]}">
                           <field name="task_ids" nolabel="1" context="{'project_id':project_id,'phase_id':phase_id,'wbs_item_id': active_id}">
                                <tree string="Tasks">
                                    <field name="name" />
                                    <field name="user_id" />
                                    <field name="state" />
                                    <field name="progress" widget="progressbar" />
                                    <button name="action_close" string="Done" type="object" icon="gtk-apply"
                                            states="draft,open,pending" groups="base.group_user"/>
                                    <button name="do_cancel" string="Cancel Task" type="object" icon="gtk-cancel"
                                            states="draft,open,pending" groups="base.group_user"/>
                                    <button name="project_task_reevaluate" string="Reactivate" type="object" icon="gtk-ok"
                                            states="cancelled,done" context="{'button_reactivate':True}" groups="base.group_user"/>
                                </tree>
                           </field>
                        </group>
                        <group string="Child Deliverables" attrs="{'invisible': [('type','!=','deliverable')]}">
                           <field name="child_ids" nolabel="1" context="{'project_id':project_id,'phase_id':phase_id,'parent_id':parent_id}">
                                <tree>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="tracking_type"/>
                                    <field name="date_deadline"/>
                                    <field name="progress_rate" widget="progressbar"/>
                                    <field name="state"/>
                                    <field name="weight" sum="Weight"/>
                                </tree>
                           </field>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" help="Follow this deliverable to automatically track the events associated" groups="base.group_user"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="project_pmi_deliverable_kanban">
            <field name="name">project_pmi.wbs_item.kanban</field>
            <field name="model">project_pmi.wbs_item</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" >
                    <field name="name"/>
                    <field name="description"/>
                    <field name="sequence"/>
                    <field name="state" groups="base.group_no_one"/>
                    <field name="color"/>
                    <field name="parent_id"/>
                    <field name="date_deadline"/>
                    <field name="message_summary"/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_dropdown_toggle oe_dropdown_kanban" groups="base.group_user">
                                <span class="oe_e">Ã­</span>
                                <ul class="oe_dropdown_menu">
                                    <t t-if="widget.view.is_action_enabled('edit')"><li><a type="edit">Edit...</a></li></t>
                                    <t t-if="widget.view.is_action_enabled('delete')"><li><a type="delete">Delete</a></li></t>
                                    <li><ul class="oe_kanban_colorpicker" data-field="color"/></li>
                                </ul>
                            </div>

                            <div class="oe_kanban_content">
                                <div><b><field name="name"/></b></div>
                                <div>
                                    <field name="parent_id"/><br/>
                                    <t t-if="record.date_deadline.raw_value and record.date_deadline.raw_value lt (new Date())" t-set="red">oe_kanban_text_red</t>
                                    <span t-attf-class="#{red || ''}"><i><field name="date_deadline"/></i></span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span>Hola</span>
                                </div>
                                <div class="oe_kanban_footer_left">
                                    <span>Hola1</span>
                                </div>
                                <div class="oe_kanban_footer_left" style="margin-top:5px;">
                                    <t t-raw="record.message_summary.raw_value"/>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
         </record>
        <record id="project_pmi_deliverable_gantt" model="ir.ui.view">
            <field name="name">project_pmi.wbs_item.gantt</field>
            <field name="model">project_pmi.wbs_item</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <gantt date_start="date_start" date_stop="date_deadline" string="Deliverables" default_group_by="parent_id" mode="year">
                </gantt>
            </field>
        </record>
        <record id="project_pmi_deliverable_calendar" model="ir.ui.view">
            <field name="name">project_pmi.wbs_item.calendar</field>
            <field name="model">project_pmi.wbs_item</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <calendar color="parent_id" date_start="date_deadline" string="Deliverable">
                    <field name="name"/>
                    <field name="quantity"/>
                    <field name="uom_id"/>
                </calendar>
            </field>
        </record>

        <record id="project_pmi_deliverable_tree_action" model="ir.actions.act_window">
            <field name="name">project_pmi.wbs_item.tree</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi.wbs_item</field>
            <field name="domain">[('parent_id','=',False)]</field>
            <field name="view_type">tree</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="project_pmi_deliverable_tree"/>
        </record>
        <menuitem
            action="project_pmi_deliverable_tree_action"
            id="project_pmi_deliverable_tree_menu"
            parent="project.menu_project_management"
            name="WBS Tree"
            groups="project.group_project_manager,project.group_project_user"
            sequence="20" />

        <record id="project_pmi_deliverable_action" model="ir.actions.act_window">
            <field name="name">Deliverables</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi.wbs_item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,gantt,calendar,kanban</field>
            <field name="domain">['|',('id','=',active_id),('id','child_of',active_id)]</field>
            <field name="view_id" ref="project_pmi_deliverable_list"/>
        </record>
        <record id="ir_deliverable_tree_open" model="ir.values">
            <field eval="'tree_but_open'" name="key2"/>
            <field eval="'project_pmi.wbs_item'" name="model"/>
            <field name="name">WBS Items</field>
            <field eval="'ir.actions.act_window,%d'%project_pmi_deliverable_action" name="value"/>
        </record>

        <record id="project_pmi_deliverable_list_action" model="ir.actions.act_window">
            <field name="name">Deliverables</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi.wbs_item</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,gantt,calendar</field>
            <field name="view_id" ref="project_pmi_deliverable_list"/>
        </record>
        <menuitem
            action="project_pmi_deliverable_list_action"
            id="project_pmi_deliverable_list_menu"
            name="WBS List"
            parent="base.menu_definitions"
            groups="project.group_project_manager,project.group_project_user"
        />

        <record id="project_pmi_deliverable_by_project_action" model="ir.actions.act_window">
            <field name="name">Deliverables</field>
            <field name="res_model">project_pmi.wbs_item</field>
            <field name="view_mode">tree,form,gantt,calendar</field>
            <field name="context">{'search_default_project_id': [active_id], 'default_project_id': active_id, 'active_test': False}</field>
            <field name="search_view_id" ref="project_pmi_deliverable_search" />
            <field name="view_id" ref="project_pmi_deliverable_list"/>
            <field name="view_type">form</field>
        </record>

        <!-- Project Views -->
        <record id="project_form" model="ir.ui.view">
            <field name="name">project_pmi_wbs.project.form</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <button string="Documents" position="after">
                    <field name="wbs_items_count" invisible="1" />
                    <button name="%(project_pmi_wbs.project_pmi_wbs_wizard_create_wbs_action)d"
                        string="Create WBS" type="action"
                        attrs="{'invisible': [('wbs_items_count','>=',1)]}"
                    />
                    <button name="%(project_pmi_deliverable_by_project_action)d"
                        string="WBS" type="action"
                        attrs="{'invisible': [('wbs_items_count','&lt;',1)]}"
                    />
                </button>
            </field>
        </record>
        <record model="ir.ui.view" id="view_project_kanban">
            <field name="name">project_pmi_wbs.project.kanban</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_kanban"/>
            <field name="arch" type="xml">
                <field name="use_tasks" position="after">
                    <field name="wbs_items_count" />
                </field>
                <xpath expr="//div[contains(@class, 'oe_kanban_project_list')]" position="inside">
                    <a t-if="record.wbs_items_count.raw_value gt 0" name="%(project_pmi_deliverable_by_project_action)d" type="action" style="margin-right: 10px">
                        <span>WBS</span>
                    </a>
                    <a t-if="record.wbs_items_count.raw_value lt 1" name="%(project_pmi_wbs.project_pmi_wbs_wizard_create_wbs_action)d" type="action" style="margin-right: 10px">
                        Create WBS
                    </a>
                </xpath>
            </field>
        </record>
        <!-- Task Views -->
        <record id="view_task_form2" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <field name="date_deadline" position="before">
                    <field name="wbs_item_id" />
                </field>
            </field>
        </record>
         <record id="view_phase_task_search_form_group" model="ir.ui.view">
            <field name="name">phase.task.search.form.group</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">
                <field name="user_id" position="before">
                    <field name="wbs_item_id" domain="[]"/>
                </field>
                <filter string="Project" name="group_project_id" icon="terp-folder-violet" domain="[]" context="{'group_by':'project_id'}" position="after">
                    <filter string="WBS Item" name="group_project_wbs_item" icon="terp-folder-violet" domain="[]" context="{'group_by':'wbs_item_id'}"/>
                </filter>
            </field>
        </record>
    </data>
</openerp>
