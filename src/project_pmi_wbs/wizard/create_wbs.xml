<openerp>
  <data>
        <record id="project_pmi_wbs_wizard_create_wbs_form" model="ir.ui.view">
            <field name="name">Create a WBS for project</field>
            <field name="model">project_pmi_wbs.wizard.create_wbs</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create a WBS" version="7.0">
                    <group col="4">
                        <field name="name" colspan="4"/>
                        <field name="project_id" invisible="1" colspan="4"/>
                        <field name="parent_project_wbs_count" invisible="1" colspan="4"/>
                        <field name="parent_project_id" colspan="4" invisible="1"/>
                        <field name="link_to_parent" colspan="4" attrs="{'invisible': [('parent_project_wbs_count','&lt;',1)]}"/>
                        <field name="parent_wbs_id" colspan="4" attrs="{'invisible': [('link_to_parent','=',False)]}" domain="[('project_id', '=', parent_project_id),('type', '=', 'deliverable')]"/>
                        <field name="wbs_template_id" colspan="4"/>
                        <field name="reference_date" colspan="4" attrs="{'invisible': [('wbs_template_id','=',False)]}"/>
                    </group>
                    <footer>
                        <button name="action_create" string="Create WBS" type="object" class="oe_highlight" /> or 
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="project_pmi_wbs_wizard_create_wbs_action" model="ir.actions.act_window">
            <field name="name">Create a WBS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi_wbs.wizard.create_wbs</field>
            <field name="src_model">project_pmi_wbs.wizard.create_wbs</field>
            <field name="view_id" ref="project_pmi_wbs_wizard_create_wbs_form"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
</data>
</openerp>
