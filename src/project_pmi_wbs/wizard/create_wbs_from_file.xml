<openerp>
  <data>
        <record id="project_pmi_wbs_wizard_create_wbs_from_file_form" model="ir.ui.view">
            <field name="name">Create a WBS for project</field>
            <field name="model">project_pmi_wbs.wizard.create_wbs_from_file</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Create a WBS" version="7.0">
                    <group col="4">
                        <field name="max_level_evaluate" colspan="4"/>
                        <field name="take_leaves_as_tasks" colspan="4" />
                        <field name="include_wbs_outline_number" colspan="4" />
                        <field name="assign_task_to_current_user" colspan="4" />
                        <field name="file" colspan="4"/>
                    </group>
                        <group name="work_package_measure" string="Work" attrs="{'invisible': [('take_leaves_as_tasks','!=','leaves_as_workpackages_unit')]}">
                            <field name="uom_id" attrs="{'required': [('take_leaves_as_tasks','=','leaves_as_workpackages_unit')]}"/>
                            <field name="quantity" attrs="{'required': [('take_leaves_as_tasks','=','leaves_as_workpackages_unit')]}"/>
                        </group>
                    <footer>
                        <button name="action_create" string="Create WBS" type="object" class="oe_highlight" /> or 
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        <record id="project_pmi_wbs_wizard_create_wbs_from_file_action" model="ir.actions.act_window">
            <field name="name">Create a WBS</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project_pmi_wbs.wizard.create_wbs_from_file</field>
            <field name="src_model">project_pmi_wbs.wizard.create_wbs_from_file</field>
            <field name="view_id" ref="project_pmi_wbs_wizard_create_wbs_from_file_form"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
        <menuitem name="Import WBS" id="menu_project_management__wizard_create_wbs_from_file" action="project_pmi_wbs_wizard_create_wbs_from_file_action" parent ="base.menu_definitions"/>

</data>
</openerp>
