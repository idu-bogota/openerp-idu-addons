<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <menuitem name="Stone" id="menu_stone_erp_idu" parent="base.menu_main_contrato_idu"/>

        <!--Centro de Costo IDU-->
        <record id="stone_erp_idu_centro_costo_list" model="ir.ui.view">
            <field name="name">stone_erp_idu.centro_costo.list</field>
            <field name="model">stone_erp_idu.centro_costo</field>
            <field name="arch" type="xml" >
                <tree string="Centro de Costo IDU" create="0">
                    <field name="codigo"/>
                    <field name="name"/>
                    <field name="proyecto_idu_id"/>
                    <field name="punto_inversion_id"/>
                </tree>
            </field>
        </record>
        
        <record id="stone_erp_idu_centro_costo_form" model="ir.ui.view">
            <field name="name">stone_erp_idu.centro_costo.form</field>
            <field name="model">stone_erp_idu.centro_costo</field>
            <field name="arch" type="xml">
                <form string="Detalle del Centro de Costo" version="7.0">
                    <header>
                        <button name="obtener_informacion_centro_costo" string="Obtener" type="object" icon="gtk-yes"/>
                    </header>
                    <group col="4" colspan="1">
                        <field name="codigo"/>
                        <field name="name"/>
                        <field name="proyecto_idu_id"/>
                        <field name="nombre_proyecto_idu"/>
                        <field name="punto_inversion_id"/>
                        <field name="nombre_punto_inversion"/>
                        <field name="fase_intervencion_id"/>
                        <field name="nombre_fase_intervencion"/>
                    </group>
                </form>
            </field>
        </record>
        
        <record id="stone_erp_idu_centro_costo_action" model="ir.actions.act_window">
            <field name="name">Centro de Costo IDU</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stone_erp_idu.centro_costo</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
            action="stone_erp_idu_centro_costo_action"
            id="menu_stone_erp_idu_centro_costo_list"
            parent="menu_stone_erp_idu"
            sequence="0"/>
    </data>
</openerp>